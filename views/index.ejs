<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/question" class="btn btn-primary">Perguntar</a>
        <hr>
        <% answer.forEach(question => { %>
            <div class="card">
                <div class="card-body">
                    <h3><%= question.titulo %></h3>
                    <p><%= question.descricao %></p>
                </div>
                <div class="card-footer">
                   <a href="/answer/<%= question.id %>">
                       <button class="btn btn-info">Responder</button>
                   </a> 
                </div>
            </div>
        <% }) %>
    </div>
      
</body>
<%- include('partials/footer.ejs') %>